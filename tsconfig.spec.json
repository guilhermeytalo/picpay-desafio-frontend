{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": ["jest", "node"],
    "paths": {
      "@core/*": ["./src/app/core/*"],
      "@environments/*": ["./src/environments/*"],
      "@layouts/*": ["./src/app/core/layouts/*"],
      "@pages/*": ["./src/app/pages/*"],
      "@shared/*": ["./src/app/shared/*"]
    }
  },
  "files": ["src/polyfills.ts"],
  "include": ["src/**/*.spec.ts", "src/**/*.d.ts"]
}
